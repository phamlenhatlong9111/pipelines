@page
@model PhuongTienDoNhom2.Pages.QuanLyDanhMuc.DonViDo.IndexModel
@{
}
<div class="cus-form-general">
    <div class="titleTable">
        <div class="groupQuanLy">
            <div class="titlePage filterDT">
                <span class="TrangChu title-layout title-area">Danh mục đơn vị đo</span>
            </div>
        </div>
        <div class="text-right">
            <div class="group-button-action">
                <button type="button" class="btn btn-success" data-toggle="modal" id="btn-themmoi">Thêm mới</button>
            </div>
        </div>
    </div>
    <div class="table-tree-wrapper table-pagination-outside">
        <div style="width:100%; margin:0 auto;">
            <table id="dataGridDanhMucDonVi" class="table-border row-border compact dataTable data-tableCustom" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên đơn vị</th>
                        <th>Ký hiệu</th>
                        <th>Lĩnh vực đo</th>
                        <th>Sử dụng</th>
                        <th>Chức năng</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
<!-- Modal add-->
<div class="modal fade" id="modalDonViDoAdd" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="loai-hinh-title" id="modalLabelAdd">Thêm mới đơn vị đo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-12">
                        <label for="tenTapChiAdd" class="editor-label">Tên đơn vị đo<span class="red-text"> *</span></label>
                        <input type="text" class="form-control" id="donViDoAdd" maxlength="100" />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="tenTapChiAdd" class="editor-label">Ký hiệu<span class="red-text"> *</span></label>
                        <input type="text" class="form-control" id="kyHieuAdd" maxlength="100" />
                    </div>
                    <div class="form-group col-md-12">
                        <label for="tenTapChiAdd" class="editor-label">Lĩnh vực đo<span class="red-text"></span></label>
                        <select id="linhVucAdd" class="form-control"></select>
                    </div>
                    <div class="form-group col-md-12 radioCustom">
                        <label class="editor-label">Sử dụng</label>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="radio" id="hoatDongDVDAdd_True" name="fav_language" value="1">
                                <label for="hoatDongDVDAdd_True">Sử dụng</label>
                            </div>
                            <div class="col-md-9">
                                <input type="radio" id="dungHoatDongDVDAdd_False" name="fav_language" value="0">
                                <label for="dungHoatDongDVDAdd_False">Không sử dụng</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="group-button-action">
                    <button type="button" class="btn btn-close-form btn-outline-primary" data-bs-dismiss="modal" id="btn-huy-DVDAdd">Hủy bỏ</button>
                    <button type="button" class="btn btn-submit-form btn-primary" id="btn-save-DVDAdd">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal update-->
<div class="modal fade" id="modalDonViDoUpdate" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <input type="hidden" class="form-control" id="idDVDUpdate">
                <h5 class="loai-hinh-title" id="modalLabelAdd">Chỉnh sửa đơn vị đo</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div role="form" id="formXeAdd">
                    <div class="form-group">
                        <label for="tenTapChiAdd" class="editor-label">Tên đơn vị đo<span class="red-text"> *</span></label>
                        <input type="text" class="form-control" id="donViDoUpdate" maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label for="tenTapChiAdd" class="editor-label">Ký hiệu<span class="red-text"> *</span></label>
                        <input type="text" class="form-control" id="kyHieuUpdate" maxlength="100" />
                    </div>
                    <div class="form-group">
                        <label for="tenTapChiAdd" class="editor-label">Lĩnh vực đo<span class="red-text"></span></label>
                        <select id="linhVucUpdate" class="form-control"></select>
                    </div>
                    <div class="form-group radioCustom">
                        <label class="editor-label">Sử dụng</label>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="radio" id="hoatDongDVDUpdate_True" name="fav_language" value="1">
                                <label for="hoatDongDVDUpdate_True">Sử dụng</label>
                            </div>
                            <div class="col-md-9">
                                <input type="radio" id="dungHoatDongDVDUpdate_False" name="fav_language" value="0">
                                <label for="dungHoatDongDVDUpdate_False">Không sử dụng</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="group-button-action">
                    <button type="button" class="btn btn-close-form btn-outline-primary" data-bs-dismiss="modal" id="btn-huy-DVDUpdate">Hủy bỏ</button>
                    <button type="button" class="btn btn-submit-form btn-primary" id="btn-save-DVDUpdate">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>

@* MODAL DELETE*@
<div class="modal fade" id="modalDeleteDonViDo" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content modal-delete">
            <div class="modal-header">
                <button type="button" class="btn-close d-none" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="warning" role="form">
                    <span class="icon-warning"></span>
                    <div class="modal-icon-delete">
                        <i class="icon icon-ic_fluent_delete_24_regular"></i>
                    </div>
                    <input type="hidden" class="form-control" id="idDVDDelete">
                    <div class="notiDelDn">Bạn có chắc chắn muốn xóa đơn vị đo</div>
                    <h6 class="titleDnDelete" id="titleDel"></h6>
                </div>
            </div>
            <div class="modal-footer">
                <div class="group-button-action">
                    <button type="button" class="btn btn-outline-primary" data-bs-dismiss="modal">Hủy bỏ</button>
                    <button type="button" id="delete_DVD" class="btn btn-unsetwidth btn-danger text-white">Đồng ý</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/pages/QuanLyDanhMuc/DonViDo/index.js"></script>
}