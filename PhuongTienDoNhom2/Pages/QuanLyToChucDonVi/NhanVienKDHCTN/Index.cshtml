<!-- Modal add-->
<div class="modal fade" id="modalAdd" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="loai-hinh-title" id="modalLabelAdd">Thêm mới nhân viên kiểm định</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Tổ chức KĐHCTN<span class="red-text"> *</span></label>
                        <select id="toChucAdd">
                        </select>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Họ và tên<span class="red-text">*</span></label>
                        <input type="text" class="form-control" id="hoTenAdd" maxlength="200" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Ngày tháng năm sinh</label>
                        <div class="input-group date datetimeLX">
                            <input type="text" class="form-control" placeholder="dd/MM/yyyy" id="namSinhAdd" autocomplete="off">
                            <div class="input-group-addon input-group-append">
                                <div class="input-group-text">
                                    <i class="icon icon-ic_fluent_calendar_24_regular icon-calendar"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 form-group radioCustom">
                        <label class="editor-label">Giới tính<span class="red-text">*</span></label>
                        <div class="row">
                            <div class="col-md-4">
                                <input type="radio" id="gioiTinhNuAdd_True" name="fav_GioiTinh" value="0">
                                <label for="gioiTinhNuAdd_True">Nữ</label>
                            </div>
                            <div class="col-md-4">
                                <input type="radio" id="gioiTinhNamAdd_True" name="fav_GioiTinh" value="1">
                                <label for="gioiTinhNamAdd_True">Nam</label>
                            </div>
                            <div class="col-md-4">
                                <input type="radio" id="gioiTinhKhacAdd_True" name="fav_GioiTinh" value="2">
                                <label for="gioiTinhKhacAdd_True">Khác</label>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Nguyên quán</label>
                        <input type="text" class="form-control" id="nguyenQuanAdd" maxlength="100" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Nơi cứ trú</label>
                        <input type="text" class="form-control" id="noiCuTruAdd" maxlength="200" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Loại hợp đồng<span class="red-text"> *</span></label>
                        <div class="col-md-3">
                            <input type="radio" id="loaiHDVC_True" name="fav_language3" value="0">
                            <label for="loaiHDVC_True">Viên chức</label>
                        </div>
                        <div class="col-md-9">
                            <input type="radio" id="loaiHDNLD" name="fav_language3" value="1">
                            <label for="loaiHDNLD">Người lao động</label>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Trình độ học vấn</label>
                        <input type="text" class="form-control" id="trinhDoHocVanAdd" maxlength="200" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Kinh nghiệm làm việc</label>
                        <input type="text" class="form-control" id="kinhNghiemLamViecAdd" maxlength="500" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Số hiệu kiểm định viên<span class="red-text"> *</span></label>
                        <input type="text" class="form-control" id="soHieuKDVAdd" maxlength="200" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Tổ chức cấp GCNKĐV</label>
                        <input type="text" class="form-control" id="noiCapAdd" maxlength="200" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Ngày cấp</label>
                        <div class="input-group date datetimeLX">
                            <input type="text" class="form-control" placeholder="dd/MM/yyyy" id="ngayCapAdd" autocomplete="off">
                            <div class="input-group-addon input-group-append">
                                <div class="input-group-text">
                                    <i class="icon icon-ic_fluent_calendar_24_regular icon-calendar"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Ngày hết hạn</label>
                        <div class="input-group date datetimeLX">
                            <input type="text" class="form-control" placeholder="dd/MM/yyyy" id="ngayHetHanAdd" autocomplete="off">
                            <div class="input-group-addon input-group-append">
                                <div class="input-group-text">
                                    <i class="icon icon-ic_fluent_calendar_24_regular icon-calendar"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="group-button">
                        <label for="nhaXuatBanAdd" class="editor-label">Tệp đính kèm</label>
                        <div class="group-button-action btn-add-file">
                            <ul id="ul-file" class="cus-add-file"></ul>
                            <button type="button" class="btn btn-outline-blue" id="btn-AddFile">Chọn tệp</button>
                            <span class="dinhDang-file">.pdf | .docx | .xlsx</span>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Trạng thái</label>
                        <div class="col-md-3">
                            <input type="radio" id="trangThaiLV_True" name="fav_language2" value="0" checked="true">
                            <label for="trangThaiLV_True">Còn làm việc</label>
                        </div>
                        <div class="col-md-9">
                            <input type="radio" id="trangThaiLV_False" name="fav_language2" value="1">
                            <label for="trangThaiLV_False">Đã nghỉ làm việc</label>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="group-button-action">
                    <button type="button" class="btn btn-close-form btn-outline-primary" data-bs-dismiss="modal" id="btn-huy-KieuAdd">Hủy bỏ</button>
                    <button type="button" class="btn btn-submit-form btn-primary" id="btn-save-Add">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>

