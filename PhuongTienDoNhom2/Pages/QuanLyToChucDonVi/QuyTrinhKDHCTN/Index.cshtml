<div class="cus-form-general">
    <div class="titleTable">
        <div class="groupQuanLy">
            <div class="titlePage filterDT">
                <span class="TrangChu title-layout title-area">Danh mục quy trình KĐHCTN công bố áp dụng</span>
            </div>
        </div>
        <div class="text-right">
            <div class="group-button-action">
                <button type="button" class="btn btn-success" data-toggle="modal" id="ThemMoi">Thêm mới</button>
            </div>
        </div>
    </div>
    <div class="table-tree-wrapper table-pagination-outside">
        <div style="width:100%; margin:0 auto;">
            <table id="dataGrid" class="table-border row-border compact dataTable data-tableCustom" cellspacing="0">
                <thead>
                    <tr>
                        <th>Stt</th>
                        <th>Tên quy trình</th>
                        <th>Số, ký hiệu</th>
                        <th>Năm ban hành</th>
                        <th>Tổ chức ban hành</th>
                        <th>Lĩnh vực</th>
                        <th>Tệp đính kèm</th>
