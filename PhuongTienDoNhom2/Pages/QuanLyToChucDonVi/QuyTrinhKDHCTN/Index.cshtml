                        <th>Chức năng</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>

<!-- Modal add-->
<div class="modal fade" id="modalAdd" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="loai-hinh-title" id="modalLabelAdd">Thêm mới quy trình KĐHCTN</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Tổ chức KĐHCTN<span class="red-text"> *</span></label>
                        <select id="toChucAdd">

                        </select>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Tên quy trình<span class="red-text">*</span></label>
                        <input type="text" class="form-control" id="tenQuyTrinhAdd" maxlength="200" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Số, ký hiệu<span class="red-text">*</span></label>
                        <input type="text" class="form-control" id="soKyHieuAdd" maxlength="100" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Thời gian ban hành</label>
                        <div class="input-group date datetimeLX">
                            <input type="text" class="form-control" placeholder="dd/MM/yyyy" id="namBanHanh" autocomplete="off">
                            <div class="input-group-addon input-group-append">
                                <div class="input-group-text">
                                    <i class="icon icon-ic_fluent_calendar_24_regular icon-calendar"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Tổ chức ban hành</label>
                        <input type="text" class="form-control" id="toChucBanHanhAdd" maxlength="200" />
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Lĩnh vực<span class="red-text"> *</span></label>
                        <select id="linhVucAdd">
                        </select>
                    </div>
                    <div class="col-md-12 form-group">
                        <label for="tenTapChiAdd" class="editor-label">Mô tả</label>
                        <input type="text" class="form-control" id="moTaAdd" maxlength="500" />
                    </div>
                    <div class="group-button">
                        <label for="nhaXuatBanAdd" class="editor-label">Tệp đính kèm</label>
                        <div class="group-button-action btn-add-file">
                            <ul id="ul-file" class="cus-add-file"></ul>
                            <button type="button" class="btn btn-outline-blue" id="btn-AddFile">Chọn tệp</button>
                            <span class="dinhDang-file">.pdf | .docx | .xlsx</span>
                        </div>
                    </div>
                    <div class="col-md-12 form-group radioCustom">
                        <label class="editor-label">Sử dụng</label>
                        <div class="row">
                            <div class="col-md-3">
                                <input type="radio" id="hoatDongKieuAdd_True" name="fav_language" checked="true">
                                <label for="hoatDongKieuAdd_True">Sử dụng</label>
                            </div>
                            <div class="col-md-9">
                                <input type="radio" id="dungHoatDongKieuAdd_False" name="fav_language">
                                <label for="dungHoatDongKieuAdd_False">Không sử dụng</label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="group-button-action">
                    <button type="button" class="btn btn-close-form btn-outline-primary" data-bs-dismiss="modal" id="btn-huy-KieuAdd">Hủy bỏ</button>
                    <button type="button" class="btn btn-submit-form btn-primary" id="btn-save-Add">Lưu</button>
                </div>
            </div>
        </div>
    </div>
</div>

