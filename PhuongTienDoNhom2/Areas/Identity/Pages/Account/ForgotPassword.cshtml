@page
@using QuanLyCayXanh.Areas.Identity.Pages.Account;
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div class="loginCMSBus">
                <div class="container">
                    <div class="loginCus">
                        <div class="logoLogin"><img src="~/lib/images/logo-horizontal-white.svg" /></div>
                        <div class="title-login">
                            <span>Quên mật khẩu</span>
                        </div>
                        <div class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-floating">
                                <div class="user">
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                                    @*<label asp-for="Input.Email" class="form-label"></label>*@
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="main-event-detail main-btn">
                                <div class="btn-event btn-special btn-red">
                                    <button type="submit" class="w-100 btn btn-lg btn-primary">Đổi mật khẩu</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
